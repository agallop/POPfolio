<Page x:Class="POPfolio.CheckListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:POPfolio"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="CheckListPage">

    <StackPanel
        Orientation="Vertical"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <Label
            FontSize="20px"
            Margin="0,0,0,20px"
            Foreground="Red">
            Click and fill out the following
        </Label>
        <Button x:Name="basicInformationButton"
            Background="Red"
                FontSize="20px"
            Foreground="Cyan" Click="basicInformationButton_Click">
            Basic Information
        </Button>
        <Button x:Name="photoButton"
            Background="Red"
                FontSize="20px"
            Foreground="Cyan" Click="Button_Click">
            Select a Photo
        </Button>
        <Button x:Name="generateButton"
            Margin="20px"
            IsEnabled="False" Click="generateButton_Click">
            Generate
        </Button>
    </StackPanel>
</Page>
